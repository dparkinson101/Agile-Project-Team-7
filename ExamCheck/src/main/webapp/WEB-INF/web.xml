<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>Log-in.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>createAccount</servlet-name>
        <servlet-class>BackEnd.createAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginManager</servlet-name>
        <servlet-class>BackEnd.loginManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileUpload</servlet-name>
        <servlet-class>BackEnd.FileUpload</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileUploadUpdate</servlet-name>
        <servlet-class>BackEnd.FileUploadUpdate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddComments</servlet-name>
        <servlet-class>BackEnd.AddComments</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateChecker</servlet-name>
        <servlet-class>BackEnd.UpdateChecker</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createAccount</servlet-name>
        <url-pattern>/createAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginManager</servlet-name>
        <url-pattern>/loginManager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileUpload</servlet-name>
        <url-pattern>/FileUpload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileUploadUpdate</servlet-name>
        <url-pattern>/FileUploadUpdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddComments</servlet-name>
        <url-pattern>/AddComments</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateChecker</servlet-name>
        <url-pattern>/UpdateChecker</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
